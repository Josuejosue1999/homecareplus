    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
        
        // Auto-update full address when component fields change
        document.addEventListener('DOMContentLoaded', function() {
            const addressFields = ['street', 'sector', 'city', 'country'];
            const addressTextarea = document.getElementById('address');
            
            function updateFullAddress() {
                const parts = [];
                addressFields.forEach(fieldId => {
                    const field = document.getElementById(fieldId);
                    if (field && field.value.trim()) {
                        parts.push(field.value.trim());
                    }
                });
                if (addressTextarea) {
                    addressTextarea.value = parts.join(', ');
                }
            }
            
            // Add event listeners to address component fields
            addressFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (field) {
                    field.addEventListener('input', updateFullAddress);
                    field.addEventListener('blur', updateFullAddress);
                }
            });
            
            // Pre-fill form with user data for testing
            setTimeout(() => {
                const phoneField = document.getElementById('phone');
                const streetField = document.getElementById('street');
                const sectorField = document.getElementById('sector');
                const countryField = document.getElementById('country');
                
                if (phoneField && !phoneField.value) phoneField.value = '+250 123 456 789';
                if (streetField && !streetField.value) streetField.value = 'kacyiru Zindiro';
                if (sectorField && !sectorField.value) sectorField.value = 'KG (Gasabo)';
                if (countryField && !countryField.value) countryField.value = 'Rwanda';
                
                // Update the full address
                updateFullAddress();
            }, 1000);
            
            // Initial address update
            updateFullAddress();
        });
    </script>
