                        <span class="separator">•</span>
                        <i class="fas fa-user me-1"></i>Cardiology Follow-up
                    </p>
                </div>
                <div class="appointment-actions">
                    <span class="status-badge status-pending">
                        <i class="fas fa-clock me-1"></i>Pending
                    </span>
                    <div class="action-buttons">
                        <button class="btn btn-sm btn-success" onclick="confirmAppointment('2')">
                            <i class="fas fa-check"></i>
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="declineAppointment('2')">
                            <i class="fas fa-times"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-primary" onclick="viewAppointmentDetails('2')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointment 3 -->
        <div class="appointment-card" data-status="confirmed" data-appointment-id="3">
